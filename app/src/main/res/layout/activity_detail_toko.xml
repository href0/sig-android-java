<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTokoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/fotoTokoIv"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/fishload"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/namaTokoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toko :"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <!--Jadwal Buka-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:tint="#009dc4" />

                <TextView
                    android:id="@+id/jadwalBukaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Jadwal buka"
                    android:layout_toEndOf="@id/image1"/>
                <TextView
                    android:id="@+id/editJadwalBukaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="Edit"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:layout_toEndOf="@+id/jadwalBukaTv"/>

            </RelativeLayout>

            <!--Jam Buka-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:tint="#009dc4" />

                <TextView
                    android:id="@+id/jamBukaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Jam buka"
                    android:layout_toEndOf="@id/image3"/>

                <TextView
                    android:id="@+id/editJamBukaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="Edit"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:layout_toEndOf="@+id/jamBukaTv"/>

            </RelativeLayout>

            <!--No Handphone-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    app:tint="#009dc4" />

                <TextView
                    android:id="@+id/nohpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="No handphone"
                    android:layout_toEndOf="@id/image2"/>

                <TextView
                    android:id="@+id/editNoHpTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:text="Edit"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:layout_toEndOf="@+id/nohpTv"/>

            </RelativeLayout>

            <!--Alamat-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_add_location_24"
                    app:tint="#009dc4" />

                <TextView
                    android:id="@+id/alamatTv"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Lokassssssssssssasasasssssssssssssssssssssssssssssi"
                    android:layout_toEndOf="@id/imageLocation"/>

                <TextView
                    android:id="@+id/editAlamatTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:textStyle="bold"
                    android:text="Edit"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:layout_toEndOf="@+id/alamatTv"/>


            </RelativeLayout>




            <LinearLayout
                android:id="@+id/lihatLokasiLl"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/lihatLokasiBtn"
                        android:padding="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textSize="17sp"
                        android:text="Lihat Lokasi"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/simpanGambarLl"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/batalSimpanBtn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:backgroundTint="#FF0000"
                    android:layout_height="wrap_content"
                    android:text="Batal"/>

                <Button
                    android:id="@+id/simpanGambarBtn"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Simpan"/>




            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>