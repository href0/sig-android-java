    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <!--LIST TOKO-->
            <androidx.cardview.widget.CardView
                android:id="@+id/listTokoCv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/TokoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko Pancingan"
                        android:textSize="27sp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List toko alat pancingan beserta \nlokasinya"
                        android:layout_below="@+id/TokoTv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffff"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tokoalat"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--MAPS-->
            <androidx.cardview.widget.CardView
                android:id="@+id/mapTokoCv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/mapTokotv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buka Map"
                        android:textSize="27sp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List map toko alat pancingan"
                        android:layout_below="@+id/mapTokotv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffff"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tokoalat"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--TENTANG-->
            <androidx.cardview.widget.CardView
                android:id="@+id/tentangCv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tentangTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tentang"
                        android:textSize="27sp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi tentang aplikasi ini"
                        android:layout_below="@+id/tentangTv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffff"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tokoalat"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--TOKO SAYA-->
            <androidx.cardview.widget.CardView
                android:id="@+id/tokosayaCv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/TokoSayaTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko Saya"
                        android:textSize="27sp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Atur toko anda disini"
                        android:layout_below="@+id/TokoSayaTv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffff"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tokoalat"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--LOGOUT-->
            <androidx.cardview.widget.CardView
                android:id="@+id/logoutCv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/logoutTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="27sp"
                        android:textColor="#ffff"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/tokoalat"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

